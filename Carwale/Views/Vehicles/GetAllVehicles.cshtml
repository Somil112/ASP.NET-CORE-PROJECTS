@model List<Carwale.Models.VehicleModel>;


<div class="container">
  <div class="products">
    @foreach (var vehicle in Model)
    {
      <div class="product-card">
        <div class="car">
          <img src="~/@vehicle.vehicleURI" alt="" />
        </div>
        <div class="content">
          <h1>@vehicle.modelName</h1>
          <h2>
            â‚¹@vehicle.price Lakhs
            <span class="extra-info"> onwards, Avg Ex-Showroom Price</span>
